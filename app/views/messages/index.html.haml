= render 'shared/side_bar'
%div.main
  %div.main__header
    %div.main__header--group-name
      test-group
    %p.main__header--members
      Members: test-user
    %a.main__header--button
      = link_to edit_group_path do
        Edit
  %div.main__contents
    %div.main__content
      %div.main__content--user-name
        test-user
        %span.main__content--date<>
          2019/02/13(Wed) 17:50:36
      %div.main__content--message
        こんにちは！
    %div.main__content
      %div.main__content--user-name
        test-user
        %span.main__content--date<>
          2019/02/13(Wed) 17:50:42
      %div.main__content--message
        さようなら！
  .form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'form__message', placeholder: 'type a message'
        .form__mask
          = f.label :image, class: 'form__mask__image' do
            = fa_icon 'picture-o', class: 'icon'
            = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'form__submit'